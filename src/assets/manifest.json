{
  "name": "IC Contact",
  "version": "1.0",
  "description": "IC Contact 通讯录产品",
  "icons": {
    "16": "images/logo-black.png",
    "48": "images/logo-black.png",
    "128": "images/logo-black.png"
  },
  "manifest_version": 2,
  "browser_action": {
    "default_icon": "images/logo-black.png",
    "default_title": "IC Contact",
    "default_popup": "popup/index.html"
  },
  "background": {
    "scripts": [
      "background/index.js"
    ],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "css": [
        "content/index.css"
      ],
      "js": [
        "content/index.js"
      ],
      "run_at": "document_end"
    }
  ],
  "options_page": "options/index.html",
  "options_ui": {
    "page": "options/index.html",
    "open_in_tab": true,
    "__chrome__chrome_style": false
  },
  "permissions": [
    "tabs",
    "declarativeContent",
    "storage",
    "notifications",
    "https://*/*"
  ],
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "web_accessible_resources": ["insert.js"]
}